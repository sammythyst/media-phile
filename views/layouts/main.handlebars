<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    {{! adding links to handlebars to be called }}
    <link rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Ruthie' />
    <link rel='stylesheet' href='/assets/css/style.css' />
    <title>MediaPhile</title>
  </head>
  <body class='page'>
    {{! adding header info for all pages }}
    <header>
      <div class='header'>
        <span>
          <span class='logo'>Media</span>
          <span class='logos'>Phile</span>
        </span>
        <nav class='header-right'>
          <a class='active' href='/'>Home</a>||
          {{! <a href="#contact">Profile</a> }}
          {{! <button id="logout" type="button" onclick="logoutHandler()">Logout</button> }}
          {{#if logged_in}}
            <a href='/profile'>Profile</a>
            |
            <button class='no-button' id='logout' onclick='logoutHandler()'>Logout</button>
          {{else}}
            <a href='/login'>Login</a>
          {{/if}}
        </nav>
      </div>
    </header>
    {{{body}}}
    <footer class='footer'>
      <span>Be yourself, be kind, be creative, share Media</span>
      <span class='logos'>Phile</span>
    </footer>
    <script src='./js/logout.js'></script>
  </body>
</html>